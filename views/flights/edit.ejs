<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/edit.css">
<%- include('../partials/nav') %>

<main>
  <h1>Edit Flight <%= flight.airline %> #<%= flight.flightNo %></h1>
  <form id="edit-form" action="/flights/<%= flight._id %>?_method=PUT" method="POST">
    <label for="airline-select">Airline:</label>
    <select name="airline" id="airline-select">
      <option value="American">American</option>
      <option value="Southwest">Southwest</option>
      <option value="United">United</option>
    </select>
    <label for="airport-select">Airport:</label>
    <select name="airport" id="airport-input">
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN" selected>DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
    </select>
    <label for="flightNo-input">Flight Number:</label>
    <input type="text" name="flightNo" id="flightNo-input">
    <label for="departs-input">Departure Date/Time(UTC):</label>
    <input type="datetime-local" name="departs" value="<%= departsDate %>" id="departs-input">
    <button type="submit">Update Flight</button>
  </form>
  <a href="/flights/<%= flight._id %>">Cancel</a>
</main>

<%- include('../partials/footer') %>