<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/show.css">
<%- include('../partials/nav') %>

<main>
  <h1>Flight: <%= flight.airline %> #<%= flight.flightNo %></h1>
  <table>
    <thead>
      <tr>
        <th>Airline</th>
        <th>Airport</th>
        <th>Flight Number</th>
        <th>Depart Date</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= flight.airline %></td>
        <td><%= flight.airport %></td>
        <td><%= flight.flightNo %></td>
        <td><%= flight.departs %></td>
        <td><form action="/flights/<%= flight._id %>?_method=DELETE" class="delete-form" method="POST">
          <button type="submit">Delete Flight</button>
        </form></td>
      </tr>
      <tr>
        <td>
          <a href="/flights/<%= flight._id %>/edit">Edit Flight</a>
        </td>
      </tr>
      <tr>
        <td>
          <a href="/flights">Go Back</a>
        </td>
      </tr>
    </tbody>
  </table>
  <h2>Tickets</h2>
  <form id="add-ticket-form" action="/flights/<%= flight._id %>/tickets" method="POST">
    <label for="seat-input">Seat:</label>
    <input name="seat" required pattern="[A-F][1-9]\d?" placeholder="e.g. 'B9' or 'D30'">
    <label for="price-input">Price(USD):</label>
    <input type="number" name="price">
    <button type="submit">Add Ticket</button>
  </form>
  <% if (flight.tickets.length) { %>
    <table>
      <thead>
        <tr>
          <td>Date</td>
          <td>Seat</td>
          <td>Price</td>
        </tr>
      </thead>
      <tbody>
        <% flight.tickets.forEach(ticket => { %>
          <tr>
            <td><%= ticket.createdAt.toLocaleDateString() %></td>
            <td><%= ticket.seat %></td>
            <td><%= ticket.price %></td>
            <td>
              <form action="/flights/<%= flight._id %>/tickets/<%= ticket._id %>?_method=DELETE" class="delete-form" method="POST">
                <button type="submit">Delete Ticket</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <h3>No Tickets Yet</h3>
  <% } %>
</main>

<%- include('../partials/footer') %>